<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3500"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2500"
                    android:background="#1a75bc"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingTop="10dp" >

                        <TextView
                            android:id="@+id/txtCard_reading_CompanyNo"
                            style="@style/txtcash"
                            android:text=""
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/txtCard_reading_MachineCode"
                            style="@style/txtcash"
                            android:gravity="center_vertical|right"
                            android:text=""
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txtCard_reading_CompanyOwerName"
                            style="@style/txtcash"
                            android:text=""
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/txtCard_reading_VanName"
                            style="@style/txtcash"
                            android:gravity="center_vertical|right"
                            android:text=""
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </LinearLayout>

            

                <View
                    style="@style/viewSpace"
                    android:layout_weight="299" />
				<LinearLayout 
				    style="@style/linercash"
				    android:layout_width="match_parent"
				    android:layout_height="0dp"
				    android:layout_weight="964"
				    android:orientation="horizontal"
				    >

                <EditText
                    android:id="@+id/txtCard"
                    style="@style/editextCardReading"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="4"
                    android:hint="휴대폰 또는 사업자번호 입력"
                    android:inputType="number"
                    android:maxLength="19"
                    android:paddingBottom="0dp"
                    android:paddingTop="0dp"
                    android:textSize="9pt" />

                <Button
                    android:id="@+id/btnReadCard" 
                    android:layout_height="match_parent" 
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_confirm_selector"
                    android:textColor="@android:color/white"
                    android:text="@string/btnReadCard"/>
				</LinearLayout>
				
                <View
                    style="@style/viewSpace"
                    android:layout_weight="260" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9528"
                android:orientation="vertical" >
                      <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6550"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/loCash1"
                    style="@style/linercash"
                    android:layout_height="0dp"
                    android:layout_weight="1514"
                    android:background="@drawable/txt_input_amount"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/edCashTAmount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical|right"
                        android:inputType="number"
                        android:cursorVisible="false"
                        android:maxLength="11"
                        android:paddingBottom="10dp"
                        android:paddingRight="3dp"
                        android:paddingTop="10dp"
                        android:text=""
                        android:textSize="15pt"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="원"
                        android:textSize="12pt"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    style="@style/viewSpace"
                    android:layout_weight="681" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="4764"
                    android:orientation="vertical" >

                    <LinearLayout
                        style="@style/viewSpace"
                        android:layout_width="match_parent"
                        android:layout_weight="1375"
                        android:orientation="horizontal" >

                        <ImageButton
                            android:id="@+id/select1"
                            style="@style/imageSelectCash"
                            android:src="@drawable/button_select1_selector" />

                        <View
                            style="@style/viewSpace"
                            android:layout_weight="250" />

                        <ImageButton
                            android:id="@+id/select3"
                            style="@style/imageSelectCash"
                            android:src="@drawable/button_select3_selector" />
                    </LinearLayout>

                    <View
                        style="@style/viewSpace"
                        android:layout_weight="250" />

                    <LinearLayout
                        style="@style/viewSpace"
                        android:layout_width="match_parent"
                        android:layout_weight="1375"
                        android:orientation="horizontal" >

                        <ImageButton
                            android:id="@+id/select2"
                            style="@style/imageSelectCash"
                            android:src="@drawable/button_select2_selector" />

                        <View
                            style="@style/viewSpace"
                            android:layout_weight="250" />

                        <ImageButton
                            android:id="@+id/select4"
                            style="@style/imageSelectCash"
                            android:src="@drawable/button_select4_selector" />
                    </LinearLayout>

                    <View
                        style="@style/viewSpace"
                        android:layout_weight="319" />

                    <LinearLayout
                        android:id="@+id/loCash3"
                        style="@style/viewSpace"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1375"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4597"
                            android:orientation="horizontal" >

                            <Button
                                android:id="@+id/btnCoupon"
                                style="@style/buttoncash"
                                android:layout_weight="3"
                                android:background="@drawable/button_apply_coupon_selector"
                                android:text="쿠폰적용" />

                            <TextView
                                android:id="@+id/tvPercent"
                                style="@style/editcredit"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="2"
                                android:background="@drawable/txt_white_payment_cash_shape"
                                android:gravity="right"
                                android:paddingRight="3dp"
                                android:text="0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="3dp"
                                android:gravity="center"
                                android:text="%" />
                        </LinearLayout>

                        <View
                            style="@style/viewSpace"
                            android:layout_weight="250" />

                        <ImageButton
                            android:id="@+id/select5"
                            style="@style/imageSelectCash"
                            android:src="@drawable/button_select5_selector" />

                        <Button
                            android:id="@+id/btnMember"
                            style="@style/buttoncash"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/button_member_apply_selector"
                            android:text="회원적용"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/loCash2"
                    style="@style/linercash"
                    android:layout_height="0dp"
                    android:layout_weight="3065"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <RadioButton
                        android:id="@+id/raCashra1"
                        style="@style/radiobuttoncash"
                        android:checked="true"
                        android:text="소득공제 " />

                    <RadioButton
                        android:id="@+id/raCashra2"
                        style="@style/radiobuttoncash"
                        android:text="지출증빙" />

                    <RadioButton
                        android:id="@+id/raCashra3"
                        style="@style/radiobuttoncash"
                        android:text="자진발급" />
                </RadioGroup>

                <LinearLayout
                    android:id="@+id/loCashService"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <LinearLayout
                            style="@style/viewSpace"
                            android:layout_width="match_parent" >

                            <TextView
                                style="@style/txtsign"
                                android:text="금   액" />

                            <TextView
                                android:id="@+id/tvCashAmount"
                                style="@style/txtsign"
                                android:gravity="center_vertical|right"
                                android:text="227,273" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/viewSpace"
                            android:layout_width="match_parent" >

                            <TextView
                                style="@style/txtsign"
                                android:text="세   금" />

                            <TextView
                                android:id="@+id/tvCashTax"
                                style="@style/txtsign"
                                android:gravity="center_vertical|right"
                                android:text="22,727" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/viewSpace"
                            android:layout_width="match_parent" >

                            <TextView
                                style="@style/txtsign"
                                android:text="서비스" />

                            <TextView
                                android:id="@+id/tvCashService"
                                style="@style/txtsign"
                                android:gravity="center_vertical|right"
                                android:text="0" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/viewSpace"
                            android:layout_width="match_parent" >

                            <TextView
                                style="@style/txtsign"
                                android:text="쿠   폰" />

                            <TextView
                                android:id="@+id/tvCashCoupon"
                                style="@style/txtsign"
                                android:gravity="center_vertical|right"
                                android:text="0" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#a6988d" />

                        <LinearLayout
                            style="@style/viewSpace"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="10dp" >

                            <TextView
                                style="@style/txtsign"
                                android:text="합   계" />

                            <TextView
                                android:id="@+id/tvCashSum"
                                style="@style/txtsign"
                                android:gravity="center_vertical|right"
                                android:text="250,000" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                </LinearLayout>

                <View
                    style="@style/viewSpace"
                    android:layout_weight="1139" />

                <LinearLayout
                    style="@style/linercash"
                    android:layout_weight="1389"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btnCancel"
                        style="@style/buttoncash"
                        android:layout_weight="4444"
                        android:background="@drawable/button_cancel_selector"
                        android:text="취소"
                        android:textSize="10pt" />

                    <View
                        style="@style/viewSpace"
                        android:layout_weight="611" />

                    <Button
                        android:id="@+id/btnConfirm"
                        style="@style/buttoncash"
                        android:layout_weight="4444"
                        android:background="@drawable/button_confirm_selector"
                        android:text="확인"
                        android:textSize="10pt" />
                </LinearLayout>

                <View
                    style="@style/viewSpace"
                    android:layout_weight="417" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>