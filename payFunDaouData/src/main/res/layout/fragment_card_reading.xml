<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#02739f"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/txtCard_reading_CompanyNo"
            style="@style/txtcash"
            android:text="" />

        <TextView
            android:id="@+id/txtCard_reading_MachineCode"
            style="@style/txtcash"
            android:gravity="center_vertical|right"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#02739f"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" >

        <TextView
            android:id="@+id/txtCard_reading_CompanyOwerName"
            style="@style/txtcash"
            android:text="" />

        <TextView
            android:id="@+id/txtCard_reading_VanName"
            style="@style/txtcash"
            android:gravity="center_vertical|right"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:paddingLeft="60dp"
        android:paddingRight="60dp" >

        <Button
            android:clickable="true"
            android:id="@+id/btnNFC"
            style="@style/buttoncash"
            android:background="@drawable/button_nfc_selector"
            android:text="NFC" />

        <Button
            android:id="@+id/btnReset"
            style="@style/buttoncash"
            android:background="@drawable/button_keyin_selector"
            android:text="READER" />

        <Button
            android:id="@+id/btnKeyin"
            android:visibility="gone"
            style="@style/buttoncash"
            android:background="@drawable/button_keyin_selector"
            android:text="KEY-IN" />
    </LinearLayout>

    <EditText
        android:id="@+id/txtCard"
        style="@style/editext"
        android:textSize="9pt"
        android:maxLength="18"
        android:inputType="number" />

</LinearLayout>