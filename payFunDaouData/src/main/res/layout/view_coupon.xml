<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/viewSpace"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:background="@drawable/bg_title_text"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:text="Coupon 등록"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="7"
            android:orientation="horizontal" >

            <View
                style="@style/viewSpace"
                android:layout_weight="125" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="700" >

                <FrameLayout
                    android:id="@+id/cameraPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <View
                style="@style/viewSpace"
                android:layout_weight="125" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#02739f"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvCompanyNo"
                    style="@style/txtcash"
                    android:textSize="6pt"
                    android:text="312-246-0095"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tvCompanyOwerName"
                    style="@style/txtcash"
                    android:gravity="center_vertical|right"
                    android:text="312-246-0095"
                    android:textSize="6pt"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvCompanyMachineCode"
                    style="@style/txtcash"
                    android:text="312-246-0095"
                    android:textSize="6pt"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tvVanName"
                    style="@style/txtcash"
                    android:gravity="center_vertical|right"
                    android:text="312-246-0095"
                    android:textSize="6pt"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/tvBarCodeResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_card_shape"
                    android:gravity="center_horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="BarCode"
                    android:textColor="@android:color/black"
                    android:textSize="8pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:paddingRight="5dp"
                    android:text="쿠폰명"
                    android:textSize="7pt" />

                <EditText
                    android:id="@+id/edCouponsperson"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/background_card_shape"
                    android:gravity="center_vertical|right"
                    android:maxLength="50"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:paddingRight="5dp"
                    android:text="할인율"
                    android:textSize="7pt" />

                <EditText
                    android:id="@+id/edCouponSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/background_card_shape"
                    android:gravity="center_vertical|right"
                    android:inputType="number"
                    android:maxLength="2"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true" />
            </LinearLayout>

            <Button
                android:id="@+id/btnSaveCoupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_register_selector"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="@android:color/white"
                android:text="Coupon 등록" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>