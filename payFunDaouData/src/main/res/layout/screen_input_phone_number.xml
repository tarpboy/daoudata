<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >

    <LinearLayout
        style="@style/viewSpace"
        android:layout_width="match_parent"
        android:layout_weight="1444" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="본인 휴대전화번호를 입력해주세요"
            android:textColor="@android:color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        style="@style/viewSpace"
        android:layout_width="match_parent"
        android:layout_weight="1000"
        android:background="@drawable/txt_while_user_shape"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingTop="0dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Republic of Korea" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="+82"
            android:textColor="#de0606" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/p_12_03" />
    </LinearLayout>

    <View
        style="@style/viewSpace"
        android:layout_weight="167" />

    <LinearLayout
        style="@style/viewSpace"
        android:layout_width="match_parent"
        android:layout_weight="1000"
        android:orientation="horizontal" >

        <LinearLayout
            style="@style/viewSpace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7150"
            android:background="@drawable/txt_while_user_shape"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:paddingLeft="10dp"
            android:paddingTop="0dp" >

            <EditText
                android:id="@+id/txtPhoneNumberInput"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="number"
                android:maxLength="13"
                android:text=""
                android:background="@android:color/transparent"
                android:gravity="left|center_vertical"
                android:hint="휴대폰번호를 입력해주세요" />

            <ImageView
                android:id="@+id/imgClearPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/p_12_07" />
        </LinearLayout>

        <LinearLayout
            style="@style/viewSpace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2850"
            android:paddingLeft="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/getCodeConfirm"
                style="@style/buttonbottomchart"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:background="@drawable/background_btn_chart_daily_s"
                android:text="다음"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/viewSpace"
        android:layout_width="match_parent"
        android:layout_weight="12300" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="입력하신 전화번호로 4자리의 인증번호를 보내드립니다." />
    </LinearLayout>

</LinearLayout>