<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/paddinglayout"
    android:paddingRight="@dimen/paddinglayout" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <View style="@style/viewSpace" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#f7941e"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/iconavata_a" />

            <TextView
                android:id="@+id/tvUserNameProfile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btnUserModify"
                style="@style/btnProfile"
                android:src="@drawable/btnusermodify" />

            <ImageView
                android:id="@+id/btnRegistedVanCode"
                style="@style/btnProfile"
                android:src="@drawable/btnregistedvancode" />

            <ImageView
                android:id="@+id/btnListCompany"
                style="@style/btnProfile"
                android:src="@drawable/btnlistcompany" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btnConfig"
                style="@style/btnProfile"
                android:src="@drawable/btnconfig" />

            <ImageView
                android:id="@+id/btnPrintConfig"
                style="@style/btnProfile"
                android:src="@drawable/btnprintconfig" />

            <ImageView
                android:id="@+id/btnPaymentPeriod"
                style="@style/btnProfile"
                android:src="@drawable/btnpaymentperiod" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical" >

        <View style="@style/viewSpace" />

        <ImageView
            style="@style/viewSpace"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:scaleType="fitStart"
            android:src="@drawable/logo_signup" />
    </LinearLayout>

</LinearLayout>