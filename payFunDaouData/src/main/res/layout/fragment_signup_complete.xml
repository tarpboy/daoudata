<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <LinearLayout
        style="@style/viewSpace"
        android:layout_width="match_parent"
        android:layout_weight="5500"
        android:orientation="vertical" >

        <View
            style="@style/viewSpace"
            android:layout_weight="3500" />

        <TextView
            style="@style/viewSpace"
            android:layout_width="match_parent"
            android:layout_weight="1900"
            android:gravity="center_horizontal"
            android:text="회원등록이 완료되었습니다.\n  입력하신 ID로 로그인하시면 됩니다. "
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        style="@style/viewSpace"
        android:layout_width="match_parent"
        android:layout_weight="1500"
        android:background="@drawable/txt_while_user_shape" >

        <TextView
            style="@style/viewSpace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="로그인 후 단말기 등록을 하시면 됩니다."
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        style="@style/viewSpace"
        android:layout_width="match_parent"
        android:layout_weight="1500"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/gotoRegisterVan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/user_regist_confirm"/>
        
    </LinearLayout>

    <LinearLayout
        style="@style/viewSpace"
        android:layout_width="match_parent"
        android:layout_weight="4500" />

</LinearLayout>