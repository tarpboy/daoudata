<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <TextView 
        android:id="@+id/txtitemReceiptReqDate"
        style="@style/txtitemreceipt"
        android:layout_weight="2"/>
    <TextView 
        android:id="@+id/txtitemReceiptReqTime"
        style="@style/txtitemreceipt"
        android:layout_weight="2"/>
    <TextView 
        android:id="@+id/txtitemReceiptTAmount"
        android:gravity="center"
        android:layout_weight="2"
        android:scrollbars="horizontal"
        style="@style/txtitemreceipt"/>
     <TextView 
        android:id="@+id/txtitemReceiptUser"
        android:gravity="center"
        android:layout_weight="2"
        android:scrollbars="horizontal"
        style="@style/txtitemreceipt"/>
     <TextView 
        style="@style/txtitemreceipt"/>
    <TextView 
        android:id="@+id/txtitemReceiptBuyerName"
        android:gravity="center"
        android:layout_weight="2"
        android:scrollHorizontally="true"
        style="@style/txtitemreceipt"/>
    

</LinearLayout>
