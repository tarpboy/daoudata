<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#acacac"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >

        <Button
            android:id="@+id/btn_dlg_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="@string/vandl_dialog_btn_cancel"
            android:background="@drawable/btn_dialog_back_shape_s"
            android:padding="12dp"
            android:textColor="#7d7d7d"/>

        <Button
            android:id="@+id/btn_dlg_accept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="@string/vandl_dialog_btn_next"
            android:textColor="#fff"
            android:background="@drawable/btn_dialog_shape_s"
            android:padding="12dp"/>

    </LinearLayout>

</LinearLayout>