<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txtitemReceiptBuyerName"
        style="@style/txtitemreceipt"
        android:layout_weight="2"
        android:gravity="center_vertical|center_horizontal"
        android:scrollHorizontally="true" />

    <TextView
        android:id="@+id/txtitemReceiptReqDate"
        style="@style/txtitemreceipt"
        android:layout_weight="2" />

    <TextView style="@style/txtitemreceipt"
        android:id="@+id/txtItemReceiptStaffName"
        android:layout_weight="2" />


    <TextView style="@style/txtitemreceipt" />

    <TextView style="@style/txtitemreceipt" />

    <TextView
        android:id="@+id/txtitemReceiptTAmount"
        style="@style/txtitemreceipt"
        android:layout_weight="2"
        android:gravity="center_vertical|right"
        android:paddingRight="5dp" />

    <LinearLayout
        style="@style/txtitemreceipt"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/iconcancel" />
    </LinearLayout>

</LinearLayout>