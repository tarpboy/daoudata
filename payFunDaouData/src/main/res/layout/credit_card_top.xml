<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="220"
        android:background="#1a75bc"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/txtCard_reading_CompanyNo"
                style="@style/txtcash"
                android:text=""
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txtCard_reading_MachineCode"
                style="@style/txtcash"
                android:gravity="center_vertical|right"
                android:text=""
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtCard_reading_CompanyOwerName"
                style="@style/txtcash"
                android:text=""
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txtCard_reading_VanName"
                style="@style/txtcash"
                android:gravity="center_vertical|right"
                android:text=""
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/viewSpace"
        android:layout_weight="30" />

</LinearLayout>