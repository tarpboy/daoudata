<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/screenTerm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <include layout="@layout/screen_terms"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/screenInPut"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <include layout="@layout/screen_input_phone_number"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/screenConfirmCode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <include layout="@layout/screen_confirmcode"/>
    </LinearLayout>
</LinearLayout>
    <com.devcrane.payfun.daou.customkeypad.KeyboardViewNumber
        android:id="@+id/keyboard_view"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="4dp"
        android:focusable="true"
        android:layout_alignParentBottom="true"
        android:focusableInTouchMode="true"
        android:shadowRadius="0.0"
        android:keyPreviewLayout="@layout/input_key_preview"
        android:visibility="visible"
        android:background="#f2f2f2"
        android:keyTextColor="#000000"
        android:keyTextSize="30sp"
        android:keyBackground="@drawable/push_keyboard_btn"
        android:labelTextSize="30sp"

        />
    </RelativeLayout>